{
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "controller": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Deployment",
            "DaemonSet"
          ]
        },
        "env": {
          "type": "object",
          "patternProperties": {
            ".*": {"type":  ["string", "null"]}
          }
        },
        "replicaCount": {
          "type": "integer"
        },
        "image": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "resources": {
          "type": "object"
        },
        "lifecyclePort": {
          "type": "integer"
        },
        "apiPort": {
          "type": "integer"
        }
      },
      "required": [
        "lifecyclePort",
        "apiPort"
      ]
    },
    "nameOverride": {
      "type": "string"
    },
    "service": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "annotations": {
          "type": "object"
        },
        "create": {
          "type": "boolean"
        },
        "type": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "nodePort": {
          "type": "integer"
        }
      }
    },
    "podMonitor": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": {
          "type": "boolean"
        }
      }
    },
    "serviceMonitor": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": {
          "type": "boolean"
        }
      }
    }
  }
}
